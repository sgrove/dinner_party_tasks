<h1>Listing tasks</h1>

<ul>

    <% @tasks.each do |task| %>
        <% css_class = task.active? ? "active" : "inactive" %>
        <li class=<%="#{css_class}"%> id=<%="task_#{task.id}"%>>
            <span class="title"><%= h task.title %></span>
            <%= link_to 'Edit', edit_task_path(task) %>
            <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete, :id=>"destroy_#{task.id}" %>
        </li>
    <% end %>
</ul>

<br/>

<%= link_to 'New task', new_task_path %>