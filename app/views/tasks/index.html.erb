<h1>Listing tasks</h1>

<ul>

  <% @tasks.each do |task| %>
    <% css_class = task.active? ? "active" : "inactive" %>
    <% css_class << " finished" if task.finished? %>

    <% content_tag_for :li, task, :class => css_class do %>
      <%= checkbox_for task  %>
      <span class="title"><%= h task.title %></span>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete, :id=>"destroy_#{task.id}" %>
    <% end %>
  <% end %>
</ul>

<br/>

<%= link_to 'New task', new_task_path %>


